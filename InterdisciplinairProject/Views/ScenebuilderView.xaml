<UserControl x:Class="InterdisciplinairProject.Views.ScenebuilderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Prominent button -->
        <Button x:Name="NewSceneButton"
                Grid.Row="0"
                Content="Nieuwe Scene"
                FontSize="16"
                Padding="12,8"
                HorizontalAlignment="Left"
                Width="180"
                Command="{Binding NewSceneCommand}"
                Background="#FF2D6CDF"
                Foreground="White"
                BorderThickness="0"/>

        <!-- Spacer -->
        <Border Grid.Row="1"/>

        <!-- Overview list (aligned with button) -->
        <Border Grid.Row="2" 
                Background="#FFF" 
                CornerRadius="4" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1"
                HorizontalAlignment="Left"
                Width="{Binding ElementName=NewSceneButton, Path=Width}">
            <DockPanel Margin="8">
                <TextBlock DockPanel.Dock="Top" 
                         Text="Overzicht scenes" 
                         FontWeight="Bold" 
                         Margin="0,0,0,8"/>
                <ListBox ItemsSource="{Binding Scenes}"
                        BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" 
                                     TextWrapping="Wrap"
                                     Padding="6"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>