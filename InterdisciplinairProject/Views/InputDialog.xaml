<Window x:Class="InterdisciplinairProject.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="PromptText" Grid.Row="0" TextWrapping="Wrap" FontWeight="SemiBold"/>
        <TextBox x:Name="InputTextBox" Grid.Row="2" MinWidth="200" VerticalAlignment="Top" Padding="6"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="80" Margin="6,0,0,0" IsDefault="True" Click="Ok_Click">OK</Button>
            <Button Width="80" Margin="6,0,0,0" IsCancel="True" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
