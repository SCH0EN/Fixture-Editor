<Window x:Class="InterdisciplinairProject.Fixtures.Views.FixtureListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterdisciplinairProject.Fixtures.ViewModels"
        mc:Ignorable="d"
        Title="Fixtures" Height="500" Width="600">

    <!-- Bind the ViewModel directly -->
    <Window.DataContext>
        <local:FixtureListViewModel />
    </Window.DataContext>

    <DockPanel>
        <!-- Left side: Create button -->
        <StackPanel DockPanel.Dock="Left" Width="150" Margin="5">
            <Button Content="Create Fixture" Command="{Binding CreateFixtureCommand}" Margin="0,0,0,5"/>
        </StackPanel>

        <!-- Main list of fixtures -->
        <ListView Margin="5" ItemsSource="{Binding Fixtures}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DockPanel>
</Window>
