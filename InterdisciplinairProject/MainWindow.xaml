<Window x:Class="InterdiscplinairProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="600"
        Width="1000"
        Background="#FFFFFF">

    <DockPanel>
        <!-- Top navigation bar -->
        <Border DockPanel.Dock="Top"
                Background="#FAFAFA"
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,0,1"
                Padding="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Left: buttons -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="8,0,0,0">
                    <Button Content="Fixtures"
                            Command="{Binding OpenFixturesCommand}"
                            Padding="10,6"
                            Margin="0,0,8,0"
                            Background="#E5E7EB"
                            BorderBrush="#D1D5DB"
                            Foreground="#111827"
                            FontWeight="SemiBold"/>

                    <Button Content="Fixture Settings"
                            Command="{Binding OpenFixtureSettingsCommand}"
                            Padding="10,6"
                            Margin="0,0,8,0"
                            Background="#E5E7EB"
                            BorderBrush="#D1D5DB"
                            Foreground="#111827"
                            FontWeight="SemiBold"/>

                    <Button Content="Scene"
                            Command="{Binding OpenSceneCommand}"
                            Padding="10,6"
                            Margin="0,0,0,0"
                            Background="#E5E7EB"
                            BorderBrush="#D1D5DB"
                            Foreground="#111827"
                            FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Right: title with subtle separator -->
                <Border Grid.Column="1"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1,0,0,0"
                        Padding="12,0,12,0"
                        VerticalAlignment="Center">
                    <TextBlock Text="{Binding Title}"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#374151"
                               VerticalAlignment="Center"
                               TextAlignment="Right"/>
                </Border>
            </Grid>
        </Border>

        <!-- Main content area -->
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>
